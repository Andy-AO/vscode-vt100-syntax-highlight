{
	"name": "vt100-syntax-highlighting",
	"displayName": "VT100 Syntax Highlighting",
	"description": "VT100 Color and Style Highlighting in the Text Editor",
	"version": "0.0.4",
	"author": {
		"name": "Tobias Faller"
	},
	"publisher": "Tobias-Faller",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/TobiasFaller/vscode-vt100-syntax-highlight"
	},
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#0055CC",
		"theme": "dark"
	},
	"homepage": "https://github.com/TobiasFaller/vscode-vt100-syntax-highlight",
	"activationEvents": [
		"onLanguage:vt100",
		"onCommand:vt100.showPreview",
		"onCommand:vt100.showPreviewToSide",
		"onWebviewPanel:vt100.preview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "vt100",
				"aliases": [
					"VT100 Terminal"
				],
				"extensions": [
					".vt100",
					".vt100.txt",
					".vt100.log"
				]
			}
		],
