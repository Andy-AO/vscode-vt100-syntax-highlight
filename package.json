		"@types/node": "^12.12.50",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^3.6.1",
		"@typescript-eslint/parser": "^3.6.1",
		"eslint": "^7.5.0",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"lodash.debounce": "^4.0.8",
		"lodash.escape": "^4.0.1"
	}
