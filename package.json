		"commands": [
			{
				"command": "vt100.showPreview",
				"title": "Show Preview",
				"category": "VT100"
			},
			{
				"command": "vt100.showPreviewToSide",
				"title": "Show Preview on Side",
				"category": "VT100"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "vt100.showPreviewToSide",
					"when": "editorLangId == vt100",
					"alt": "vt100.showPreview",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "vt100.showPreview",
					"when": "resourceLangId == vt100",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "vt100.showPreview",
					"when": "resourceLangId == vt100",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "vt100.showPreview",
					"when": "editorLangId == vt100",
					"group": "navigation"
				},
				{
					"command": "vt100.showPreviewToSide",
					"when": "editorLangId == vt100",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "vt100.showPreview",
				"key": "shift+ctrl+v",
				"mac": "shift+cmd+v",
				"when": "editorLangId == vt100"
			},
			{
				"command": "vt100.showPreviewToSide",
				"key": "ctrl+k v",
				"mac": "cmd+k v",
				"when": "editorLangId == vt100"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/lodash.debounce": "^4.0.6",
